<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@drawable/background" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="8dp">
        <DatePicker android:layout_gravity="center" android:id="@+id/datepicker" android:layout_width="match_parent" android:layout_height="wrap_content" android:onClick="onClick"/>
        <EditText android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/anzahl" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:text="" android:numeric="integer"/>
        <SeekBar android:id="@+id/typ" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:max="6" android:progress="3"/>
        <TextView android:textSize="18dp" android:textStyle="bold" android:textColor="#000000" android:gravity="center" android:id="@+id/typ_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Tage"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:stretchColumns="*">
            <Button android:layout_gravity="center_horizontal" android:id="@+id/berechnen" android:layout_width="wrap_content" android:layout_height="35dp" android:text="@string/btn_berechnen" android:layout_weight="1" android:onClick="onClick"/>
            <Button android:layout_gravity="center_horizontal" android:id="@+id/zufall" android:layout_width="wrap_content" android:layout_height="35dp" android:text="@string/btn_zufall" android:layout_weight="1" android:onClick="onClick"/>
        </LinearLayout>
        <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:background="@drawable/cloud" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="20dp" android:textStyle="bold" android:textColor="#000000" android:gravity="center" android:layout_gravity="center" android:id="@+id/datum" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Your Magic Date is:\10"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
